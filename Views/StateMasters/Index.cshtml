@model IEnumerable<e_Office.Models.StateMaster>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered" style="width:98%;margin:10px;">
