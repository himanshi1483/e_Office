@model IEnumerable<e_Office.Models.AuthorityMaster>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title m-b-0 float-left">Authority Master</h5>
                <a class="btn btn-cyan float-right" href="@Url.Action("Create")">Create New</a>
            </div>
            <div class="card-body">
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered" style="width:98%;margin:10px;">
                        <thead class="thead-light">
                            <tr class="text-center">
                                <th>
                                    Authority Name
                                </th>
                                <th>
                                    Authority Code
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AuthorityName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AuthorityCode)
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Edit", new { id = item.AuthorityId })" class="btn btn-sm btn-success">Edit</a>|
                                        <a href="@Url.Action("Delete", new { id = item.AuthorityId })" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                }
            </div>

        </div>
</div>
</div>