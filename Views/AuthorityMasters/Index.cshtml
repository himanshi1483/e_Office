@model IEnumerable<e_Office.Models.AuthorityMaster>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <a class="btn btn-cyan float-right" href="@Url.Action("Create")">Create New</a>
            </div>
            <div class="card-body">
                <h5 class="card-title m-b-0">Authority Master</h5>
            </div>
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered" style="width:98%;margin:10px;">
                    <tr>
                        <th>
                            Authority Name
                        </th>
                        <th>
                            Authority Code
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AuthorityName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AuthorityCode)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.AuthorityId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.AuthorityId })
                            </td>
                        </tr>
                    }

                </table>

            }
        </div>
</div>
</div>