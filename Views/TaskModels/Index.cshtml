@model IEnumerable<e_Office.Models.TaskModel>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <a class="btn btn-cyan float-right" href="@Url.Action("Create")">Create New</a>
            </div>
            <div class="card-body">
                <h5 class="card-title m-b-0">To-Do List</h5>
            </div>
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered" style="width:98%;margin:10px;">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TaskSummary)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DueDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TaskPriority)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AssignedTo)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TaskSummary)
                            </td>
                            <td>
                               @item.StartDate.Value.ToLongDateString()
                            </td>
                            <td>
                                @item.DueDate.Value.ToLongDateString()
                            </td>
                            <td>
                                @Enum.GetName(typeof(e_Office.Models.EnumModel.Priority), Convert.ToInt32(item.TaskPriority))
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AssignedTo)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.TaskId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.TaskId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.TaskId })
                            </td>
                        </tr>
                    }

                </table>
            }
        </div>
    </div>
</div>