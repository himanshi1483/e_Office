<body>
    <div class="main-wrapper">
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
          
            <header class="topbar" data-navbarbg="skin1" style="height:100px">
                <div class="row">
                    <div class="col-md-4">
                        <img src="~/Content/theme/assets/images/dummy.png" width="200" height="100" />
                    </div>
                    <div class="col-md-4 text-center" style="margin-top:30px">  <h1>e-Office</h1></div>
                    <div class="col-md-4">
                        <img src="~/Content/theme/assets/images/dummy.png" class="float-right" width="200" height="100" />
                    </div>
                </div>
            </header>
                <div class="preloader">
                    <div class="lds-ripple">
                        <div class="lds-pos"></div>
                        <div class="lds-pos"></div>
                    </div>
                </div>  @RenderBody()

         
        </div>
