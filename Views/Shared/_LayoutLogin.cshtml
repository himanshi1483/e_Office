        All Rights Reserved by Aarush Systems. Designed and Developed by Aarush Systems.
    </footer>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Content/theme/dist/js/jquery.ui.touch-punch-improved.js"></script>
    <script src="~/Content/theme/dist/js/jquery-ui.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/theme/assets/libs/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/Content/theme/assets/libs/bootstrap/dist/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
    <script>

        $('[data-toggle="tooltip"]').tooltip();
        $(".preloader").fadeOut();
        // ==============================================================
        // Login and Recover Password
        // ==============================================================
        $('#to-recover').on("click", function () {
            $("#loginform").slideUp();
            $("#recoverform").fadeIn();
        });
        $('#to-login').click(function () {

            $("#recoverform").hide();
            $("#loginform").fadeIn();
        });
    </script>

</body>
