@model IEnumerable<e_Office.Models.ClassificationMaster>

@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <a class="btn btn-cyan float-right" href="@Url.Action("Create")">Create New</a>
            </div>
            <div class="card-body">
                <h5 class="card-title m-b-0">Classification Master</h5>
            </div>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ClassificationName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClassificationCode)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassificationName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassificationCode)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ClassificationId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ClassificationId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ClassificationId })
                        </td>
                    </tr>
                }

            </table>
            </div>
        </div>
    </div>
